.w
    position relative;

#header
    background black;
    color #fff;
    width 250px;
    height 100%;
    position fixed;
    left 0;
    top 0;
    display flex;
    align-items center;
    flex-direction column;
    & .img
        width 100px;
        height 100px;
        margin-top 30px;
        margin-bottom 20px;
        overflow hidden;
        & .avatar
            width 100%;
            height 100%
            border-radius 50%;
            cursor pointer;
            transition: transform .5s linear;
            &:hover
                transform rotate(360deg);
    & h1
        font-size 28px;
        font-weight 300;
        color #fff;
    & ul
        & li
            padding 16px 0;
            cursor pointer;
            & a
                color #fff;


#content
    margin 0px 40px 40px 290px;


@media only screen and (max-width: 600px)
    #header
        width 100%;
        height 80px;
        display: flex;
        flex-direction row;
        & .img
            width 50px;
            height 50px;
            margin 0 15px;
        & h1
            display none;
        & ul
            display flex;
            align-items center;
            & li
                padding: 0 10px;

    #content
        margin 80px 15px 15px;
        overflow hidden


